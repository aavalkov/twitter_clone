<h1>Twitter</h1>

<% if current_user %>
<div class ="row">
  <div class="col-md-3">
    <%= render 'tweets/form' %>
  </div>

  <div class="col-md-6">
    <h3>Tweet Deck:</h3>
    <% current_user.f_tweets.each do |tweet| %>
      <% tweeter = '@' + User.find(tweet.user_id).username%>
      <h5><%=link_to tweeter, user_path(tweet.user_id)%></h5>
      <p><%= tweet.tweet%> </p>
    <% end %>
    <br>
  </div>
  <div class="col-md-3">
      <form action="/" method="get" class="form-inline">
        <input name="search[query]" type="text" class="form-control" placeholder="search users">
        <button class="btn btn-primary">Enter</button>
      </form>

    <% if !@results.nil? %>
      <h5>Results</h5>
      <% @results.each do |result| %>
        <p><%= link_to "@"+result.username, user_path(result.id)%></p>
      <% end %>
    <% end %>

  </div>
</div>
<% else %>
  <%= render 'form'%>
<% end %>




