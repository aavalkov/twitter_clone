<h1>Twitter</h1>

<% if current_user %>
  <%= render 'tweets/form' %>

  <div class="col-md-6">
    <h3>Tweet Deck:</h3>
  <% Tweet.all.each do |tweet| %>
    <%= tweet.tweet%>
    <% tweeter = '@' + User.find(tweet.user_id).username.capitalize%>
    <%=link_to tweeter, user_path(tweet.user_id)%>
  <br>
  <% end %>
  </div>
<% else %>
  <%= render 'form'%>
<% end %>




